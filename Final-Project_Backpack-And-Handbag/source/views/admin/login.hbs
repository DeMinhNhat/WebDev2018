{{#section 'title'}}
Login
{{/section}}

{{#if errorMsg}}
<div class="alert alert-danger">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	<strong>Title!</strong> {{errorMsg}} ...
</div>
{{/if}}

<form class="form-horizontal" method="post" action="" id="frmLogin">
    <div class="container" style="background-color:white;">
        <input type="hidden" value="1" name="permission">
        <div class="form-group">
            <label for="txtUsername" class="col-sm-3 col-md-3 col-lg-3 control-label">Tên đăng nhập</label>
            <div class="col-sm-4 col-md-4 col-lg-4">
                <input type="text" class="form-control" id="txtUsername" placeholder="Tên đăng nhập" name="username">
            </div>
        </div>
        <div class="form-group">
            <label for="txtPWD" class="col-sm-3 col-md-3 col-lg-3 control-label">Password</label>
            <div class="col-sm-4 col-md-4 col-lg-4">
                <input type="password" class="form-control" id="txtPWD" placeholder="Password" name="pswd">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="hidden" value="adminLogin" name="typeSubmit">
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-ok"></span>
                    Login
                </button>
            </div>
        </div>
    </div>
</form>