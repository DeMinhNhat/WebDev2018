{{#section 'title'}}
Trang Chủ
{{/section}}

<div class="container">
	<hr>
	<div class="brandSlider">
		<div class="secTitle">THƯƠNG HIỆU</div>
		<div class="row mx-auto my-auto">
			<div id="recipeCarousel" class="carousel slide w-100" data-ride="carousel">
				<div class="carousel-inner w-100" role="listbox">
					<div class="carousel-item active">
						<img class="d-block col-3 img-fluid Bra1" src="/imgs/brands/herschel.png">
					</div>
					<div class="carousel-item">
						<img class="d-block col-3 img-fluid Bra2" src="/imgs/brands/nike.png">
					</div>
					<div class="carousel-item">
						<img class="d-block col-3 img-fluid Bra3" src="/imgs/brands/north-face.png">
					</div>
					<div class="carousel-item">
						<img class="d-block col-3 img-fluid Bra4" src="/imgs/brands/swiss-gear.png">
					</div>
					<div class="carousel-item">
						<img class="d-block col-3 img-fluid Bra5" src="/imgs/brands/under-armour.png">
					</div>

				</div>
				<a class="carousel-control-prev" href="#recipeCarousel" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#recipeCarousel" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>
		</div>
	</div>
	<div class="topSoldSlider">
		<div class="secTitle">BÁN CHẠY NHẤT</div>
		<div class="row mx-auto my-auto">
			<div id="recipeCarousel2" class="carousel slide w-100" data-ride="carousel">
				<div class="carousel-inner w-100" role="listbox">

					{{#each top_sold}}
					<div class="carousel-item">
						<div class="backpack-item">
							<a href="/product/detail/{{ProID}}">
								<div class="bp-saleoff">-1%</div>
								<img src="/imgs/products/{{ProID}}/1.jpg" height="185" width="185" style="max-height:100%; max-width:100%;">
								<div class="bp-name">{{ProName}}</div>
								<div class="bp-name">{{TinyDes}}</div>
								<div class="bp-price">{{number_format Price}}</div>
								<div class="bp-name">{{date_format ImportDate}}</div>
							</a>
						</div>
					</div>
					{{/each}}

				</div>
				<a class="carousel-control-prev" href="#recipeCarousel2" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#recipeCarousel2" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>
		</div>
	</div>
	<div class="newArrivalSlider">
		<div class="secTitle">HÀNG MỚI VỀ</div>
		<div class="row mx-auto my-auto">
			<div id="recipeCarousel3" class="carousel slide w-100" data-ride="carousel">
				<div class="carousel-inner w-100" role="listbox">

					{{#each newest}}
					<div class="carousel-item">
						<div class="backpack-item">
							<a href="/product/detail/{{ProID}}">
								<div class="bp-saleoff">-1%</div>
								<img src="/imgs/products/{{ProID}}/1.jpg" height="185" width="185" style="max-height:100%; max-width:100%;">
								<div class="bp-name">{{ProName}}</div>
								<div class="bp-name">{{TinyDes}}</div>
								<div class="bp-price">{{number_format Price}}</div>
								<div class="bp-name">{{date_format ImportDate}}</div>
							</a>
						</div>
					</div>
					{{/each}}

				</div>
				<a class="carousel-control-prev" href="#recipeCarousel3" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#recipeCarousel3" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>
		</div>
	</div>
	<!-- End of newArrivalSlider -->
	<div class="topTenViewed">
		<div class="secTitle">TOP 10 LƯỢT XEM</div>
		<div class="row mx-auto my-auto">
			<div id="recipeCarousel4" class="carousel slide w-100" data-ride="carousel">
				<div class="carousel-inner w-100" role="listbox">

					{{#each top_viewed}}
					<div class="carousel-item">
						<div class="backpack-item">
							<a href="/product/detail/{{ProID}}">
								<div class="bp-saleoff">-1%</div>
								<img src="/imgs/products/{{ProID}}/1.jpg" height="185" width="185" style="max-height:100%; max-width:100%;">
								<div class="bp-name">{{ProName}}</div>
								<div class="bp-name">{{TinyDes}}</div>
								<div class="bp-price">{{number_format Price}}</div>
								<div class="bp-name">{{date_format ImportDate}}</div>
							</a>
						</div>
					</div>
					{{/each}}

				</div>
				<a class="carousel-control-prev" href="#recipeCarousel4" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#recipeCarousel4" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>
		</div>
	</div>
	<div class="userReview">
		<div class="secTitle">ĐÁNH GIÁ</div>
		<div class="row">
			<div class="col-md-4">
				<div class="user">
					<div class="user-ava">
						<i class="fas fa-user-circle fa-6x"></i>
					</div>
					<div class="user-name">Thai Bao</div>
					<hr>

					<p class="user-comment">
						<i class="fas fa-quote-left"></i>
						We came to the store because we saw a bag we liked. the products are of good quality. The shop-keeper is very nice and the
						prices are great! I recommend to come here.

						<i class="fas fa-quote-right"></i>
					</p>
				</div>
			</div>
			<div class="col-md-4">
				<div class="user">
					<div class="user-ava">
						<i class="fas fa-user-circle fa-6x"></i>
					</div>
					<div class="user-name">Thien Duyen</div>
					<hr>
					<p class="user-comment">

						<i class="fas fa-quote-left"></i>
						I bought a fantastic backpack made of great quality leather. The service was fantastic! And the bag was a great price for
						the amazing quality. Would shop here again. And maybe order something next time to get a bespoke
						item.
						<i class="fas fa-quote-right"></i>
					</p>
				</div>
			</div>
			<div class="col-md-4">
				<div class="user">
					<div class="user-ava">
						<i class="fas fa-user-circle fa-6x"></i>
					</div>
					<div class="user-name">Hoang Anh</div>
					<hr>

					<p class="user-comment">
						<i class="fas fa-quote-left"></i>
						Good quality and great costumer service. The products made from good materiel and custom made exactly as we wanted.

						<i class="fas fa-quote-right"></i>
					</p>
				</div>
			</div>
		</div>
	</div>
	<!-- End of userReview -->
</div>
