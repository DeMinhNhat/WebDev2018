{{#section 'title'}}
Sản phẩm
{{#with product}}
{{ProName}}
{{/with}}
{{/section}}

{{#section 'css'}}
<link rel="stylesheet" href="/assets/home/css/product-detail.css">
{{/section}}

{{#section 'js'}}
<script src="/assets/home/js/product-detail.js"></script>
{{/section}}

<div class="container">
	{{#with product}}
	<div class="product-detail">
		<div class="topPath row">
			<div class="col-lg-7">
				<span class="breadCum">
					<i class="fas fa-home"></i>
					<span class="breadCum-item">
						<a href="/"> ssgBackpack</a>
					</span>
					<span>/</span>
					<span class="breadCum-item">
						<a href="/product"> Sản phẩm</a>
					</span>
					<span>/</span>
					<span class="breadCum-item active">
						{{ProName}}
					</span>
				</span>
			</div>
			<div class="col-lg-5">
			</div>
		</div>

		<div class="essential-info">
			<div class="row">
				<div class="col-sm-7">
					<div class="imgSlider">
						<!-- Slider for Product Images -->
						<div id="overviewSlide" class="carousel detail slide" data-ride="carousel">
							<ol class="carousel-indicators">
								<li data-target="#overviewSlide" data-slide-to="0" class="active"></li>
								<li data-target="#overviewSlide" data-slide-to="1"></li>
								<li data-target="#overviewSlide" data-slide-to="2"></li>
							</ol>
							<div class="carousel-inner w-100" role="listbox">
								<div class="carousel-item">
									<img src="/imgs/products/{{ProID}}/1.jpg">
								</div>
								<div class="carousel-item">
									<img src="/imgs/products/{{ProID}}/2.jpg">
								</div>
								<div class="carousel-item">
									<img src="/imgs/products/{{ProID}}/3.jpg">
								</div>
							</div>
							<a class="carousel-control-prev" href="#overviewSlide" role="button" data-slide="prev">
								<span class="carousel-control-prev-icon" aria-hidden="true"></span>
								<span class="sr-only">Previous</span>
							</a>
							<a class="carousel-control-next" href="#overviewSlide" role="button" data-slide="next">
								<span class="carousel-control-next-icon" aria-hidden="true"></span>
								<span class="sr-only">Next</span>
							</a>
						</div>
					</div>
					<!-- End of Img Slider -->
				</div>
				<div class="col-sm-5">
					<div class="detail-info">
						<div id="tensp">{{ProName}}</div>
						<span id="tinydes">{{TinyDes}}</span>
						<br>
						<div id="price">{{number_format Price}}</div>
						<br>
					</form>
					{{#if ../layoutVM.isLogged}}
					<form method="POST" action="">
						<input type="hidden" value="addToCart" name="typeSubmit">
						<input type="hidden" value="{{ProID}}" name="proId">
						<button type="button" class="btn btn-secondary btn-sm" id="subOne">-</button>
						<input type="number" name="quantity" id="numItems" value="1" min="1" max="10">
						<button type="button" class="btn btn-secondary btn-sm" id="addOne">+</button>
						<br>
						<button type="submit" id="addcart-btn" type="button" class="btn btn-danger">
							<i class="fas fa-cart-plus"></i> Thêm vào giỏ
						</button>
					</form>
					{{else}}
					{{!-- sử lí js yêu cầu người dùng đăng nhập --}}
					<button type="button" class="btn btn-secondary btn-sm" id="subOne">-</button>
					<input type="number" name="quantity" id="numItems" value="1" min="1" max="10">
					<button type="button" class="btn btn-secondary btn-sm" id="addOne">+</button>
					<br>
					<button class="btn btn-danger" type="button" data-toggle="modal" data-target="#signinModal" data-backdrop="static" data-keyboard="false">
						<i class="fas fa-cart-plus"></i> Thêm vào giỏ
					</button>
					{{/if}}
					<br>
					Nhà sản xuất:
					<span id="nsx">{{BraName}}</span>
					<br> Xuất xứ:
					<span id="xuatxu">{{Origin}}</span>
					<br> Loại sản phẩm:
					<span id="loaisp">{{CatName}}</span>
					<br> Ngày nhập:
					<span id="importdate">{{date_format ImportDate}}</span>
					<br>
					<hr> Lượt xem:
					<span id="luotxem">{{Clicks}}</span>
					<br>Lượt mua:
					<span id="soluongban">{{SoldQuantity}}</span>
					<br>
				</div>
			</div>
			<!-- End of col-md-5 -->
		</div>
	</div>
	<!-- End of essential-info -->
	<p>
		<button class="btn btn-dark" type="button">
			Mô tả sản phẩm
		</button>
	</p>
	<div class="more-info" id="describe">
		<div id="details">{{FullDes}}</div>
			{{!-- <div class="dimension">Dimension: 17"(H) x 12"(W) x 5.75"(D), 19.5L</div>
			<img src="/assets/images/products/bp_01/10066_sizingtile.jpg" alt="Size">
			<img src="/assets/images/products/bp_01/detail01.jpg" alt="Buckle">
			<img src="/assets/images/products/bp_01/detail02.jpg" alt="FrontPocket">
			<img src="/assets/images/products/bp_01/detail03.jpg" alt="MediaPort"> --}}
		</div>
	</div>
	{{/with}}

</div>

<div class="container">
	<div class="sameTypeProducts">
		<div class="secTitle">SẢN PHẨM CÙNG LOẠI</div>
		<div class="row mx-auto my-auto">
			<div id="recipeCarousel4" class="carousel product slide w-100" data-ride="carousel">
				<div class="carousel-inner w-100" role="listbox">

					{{#each same_cats}}
					<div class="carousel-item">
						<div class="backpack-item">
							<a href="/product/detail/{{ProID}}">
								{{#if SaleOff}}
								<div class="bp-saleoff">-{{SaleOff}}%</div>
								{{/if}}
								<img src="/imgs/products/{{ProID}}/1.jpg" height="185" width="185" style="max-height:100%; max-width:100%;">
								<div class="bp-name">{{ProName}}</div>
								<div class="bp-name">{{TinyDes}}</div>
								<div class="bp-price">{{number_format Price}}</div>
								{{!-- <div class="bp-name">{{date_format ImportDate}}</div> --}}
							</a>
							<div class="btn-toolbar" role="toolbar">
								<div class="btn-group btn-group-sm" role="group">
									{{#if ../layoutVM.isLogged}}
									<form method="POST" action="">
										<input type="hidden" value="addToCart" name="typeSubmit">
										<input type="hidden" value="{{ProID}}" name="proId">
										<input type="hidden" value="1" name="quantity">
										<button class="btn btn-danger" type="submit">
											<i class="fas fa-cart-plus"></i>
										</button>
									</form>
									{{else}}
									{{!-- sử lí js yêu cầu người dùng đăng nhập --}}
									<button class="btn btn-danger" type="button" data-toggle="modal" data-target="#signinModal" data-backdrop="static" data-keyboard="false">
										<i class="fas fa-cart-plus"></i>
									</button>
									{{/if}}
									<button onclick="window.location.href='/product/detail/{{ProID}}'" 
									type="button" class="btn btn-outline-info productDetail">Chi tiết</button>
								</div>
							</div>
						</div>
					</div>
					{{/each}}

				</div>
				<a class="carousel-control-prev" href="#recipeCarousel4" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#recipeCarousel4" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>
		</div>
	</div>
</div>

