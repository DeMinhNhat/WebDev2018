{{#section 'title'}}
Sản phẩm
{{#with product}}
{{ProName}}
{{/with}}
{{/section}}

{{#section 'css'}}
<link rel="stylesheet" href="/assets/home/css/product-detail.css">
{{/section}}

{{#section 'js'}}
<script src="/assets/home/js/product-details.js"></script>
<script src='https://www.google.com/recaptcha/api.js'></script>
{{/section}}

<div class="container">
	<hr>
	{{#with product}}
	<div class="product-detail">
		<div class="topPath">
			<div class="row">
				<div class="col-lg-7">
					<span class="breadCum">
						<i class="fas fa-home"></i>
						<span class="breadCum-item">
							<a href="#"> ssgBackpack</a>
						</span>
						<span>/</span>
						<span class="breadCum-item">
							<a href="#"> Sản phẩm</a>
						</span>
						<span>/</span>
						<span class="breadCum-item">
							<a href="#"> {{ProName}}</a>
						</span>
					</span>
				</div>
				<div class="col-lg-5">
				</div>
			</div>
		</div>

		<div class="essential-info">
			<div class="row">
				<div class="col-md-7">
					<div class="imgSlider">
						<!-- Slider for Product Images -->
						<div id="overviewSlide" class="carousel slide" data-ride="carousel">
							<ol class="carousel-indicators">
								<li data-target="#overviewSlide" data-slide-to="0" class="active"></li>
								<li data-target="#overviewSlide" data-slide-to="1"></li>
								<li data-target="#overviewSlide" data-slide-to="2"></li>
							</ol>
							<div class="carousel-inner w-100" role="listbox">
								<div class="carousel-item">
									<img src="/imgs/products/{{ProID}}/1.jpg" alt="" class="d-block img-fluid">
								</div>
								<div class="carousel-item">
									<img src="/imgs/products/{{ProID}}/2.jpg" alt="" class="d-block img-fluid">
								</div>
								<div class="carousel-item">
									<img src="/imgs/products/{{ProID}}/3.jpg" alt="" class="d-block img-fluid">
								</div>
							</div>
							<a class="carousel-control-prev" href="#overviewSlide" role="button" data-slide="prev">
								<span class="carousel-control-prev-icon" aria-hidden="true"></span>
								<span class="sr-only">Previous</span>
							</a>
							<a class="carousel-control-next" href="#overviewSlide" role="button" data-slide="next">
								<span class="carousel-control-next-icon" aria-hidden="true"></span>
								<span class="sr-only">Next</span>
							</a>
						</div>
					</div>
					<!-- End of Img Slider -->
				</div>
				<div class="col-md-5">
					<div class="detail-info">
						<div id="tensp">{{ProName}}</div>
						<div id="price">{{number_format Price}}</div>
						<div id="importdate">{{date_format ImportDate}}</div>
						<div id="tinydes">{{TinyDes}}</div>

						<button id="buynow-btn" type="button" class="btn btn-danger">Mua ngay</button>
						<button id="addcart-btn" type="button" class="btn btn-outline-primary">Thêm vào giỏ</button>
						<br>
						Nhà sản xuất:
						<span id="nsx">{{BraName}}</span>
						<br> Xuất xứ:
						<span id="xuatxu">{{Origin}}</span>
						<br> Loại sản phẩm:
						<span id="loaisp">{{CatName}}</span>
						<br>
						<hr> Lượt xem:
						<span id="luotxem">{{Clicks}}</span>
						<br>Lượt mua:
						<span id="soluongban">{{Quantity}}</span>
						<br>
					</div>
				</div>
				<!-- End of col-md-5 -->
			</div>
		</div>
		<!-- End of essential-info -->
		<button class="btn btn-outline-info" data-toggle="collapse" data-target="#describe">Mô tả sản phẩm</button>
		<div class="more-info collapse" id="describe">
			<p id="details">{{FullDes}}</p>
			{{!-- <div class="dimension">Dimension: 17"(H) x 12"(W) x 5.75"(D), 19.5L</div>
			<img src="/assets/images/products/bp_01/10066_sizingtile.jpg" alt="Size">
			<img src="/assets/images/products/bp_01/detail01.jpg" alt="Buckle">
			<img src="/assets/images/products/bp_01/detail02.jpg" alt="FrontPocket">
			<img src="/assets/images/products/bp_01/detail03.jpg" alt="MediaPort"> --}}
		</div>
	</div>
	{{/with}}

</div>

<div class="container">
	<div class="sameTypeProducts">
		<div class="secTitle">SẢN PHẨM CÙNG LOẠI</div>
		<div class="row mx-auto my-auto">
			<div id="recipeCarousel4" class="carousel slide w-100" data-ride="carousel">
				<div class="carousel-inner w-100" role="listbox">

					{{#each same_cats}}
					<div class="carousel-item">
						<div class="backpack-item">
							<a href="/product/detail/{{ProID}}">
								<div class="bp-saleoff">-1%</div>
								<img src="/imgs/products/{{ProID}}/1.jpg" height="185" width="185" style="max-height:100%; max-width:100%;">
								<div class="bp-name">{{ProName}}</div>
								<div class="bp-name">{{TinyDes}}</div>
								<div class="bp-price">{{number_format Price}}</div>
								<div class="bp-name">{{date_format ImportDate}}</div>
							</a>
						</div>
					</div>
					{{/each}}

				</div>
				<a class="carousel-control-prev" href="#recipeCarousel4" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#recipeCarousel4" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>
		</div>
	</div>
</div>

