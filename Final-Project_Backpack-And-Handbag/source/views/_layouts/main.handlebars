                                        <label for="gender-change">Giới tính:</label>
                                        <select name="gender" id="gender-change" class="custom-select">
                                            <option value="none" selected>Chọn...</option>
                                            <option value="male">Nam</option>
                                            <option value="female">Nữ</option>
                                            <option value="other">Khác</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="phoneNum-change">Điện thoại:</label>
                                <input type="tel" class="form-control" value="{{layoutVM.curUser.f_Phone}}" name="phone" id="phoneNum-change" placeholder="(+84) 123 456 789">
                            </div>
                            <hr>
                            {{!-- <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" name="accept-term"> Tôi đồng ý với
                                    <a href="#">Điều khoản sử dụng</a>
                                </label>
                            </div> --}}
                            <div class="g-recaptcha" data-sitekey="6LdDG1YUAAAAAJmrKr-38rsKihGsjZwDEMDRQWn0"></div>
                            <hr>
                            <button type="submit" class="btn btn-dark btn-block" form="changeInfo-form" {{!-- data-dismiss="modal" --}}>Xác nhận</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- End of sign up modal-->
    </div>
    <!-- End of header -->
</div>
{{!-- --}}
