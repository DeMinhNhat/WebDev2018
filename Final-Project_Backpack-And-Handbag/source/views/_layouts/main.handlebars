            </div>
        </div>
        <!-- End of row -->
        <!-- Modal login -->
        <div class="modal fade" id="signinModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <!-- Modal Header -->
                    <div class="modal-header">
