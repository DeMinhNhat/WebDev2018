                            <input type="hidden" value="{{layoutVM.curUser.f_ID}}" name="id">

                            <div class="form-group">
                                <label for="email-change">Email:</label>
                                <input type="email" class="form-control" id="email-change" placeholder="katie@email.com" value="{{layoutVM.curUser.f_Email}}" name="email">
                            </div>
                            <div class="form-group">
                                <label for="username-change">Họ tên:</label>
                                <input type="text" class="form-control" id="username-change" placeholder="Katty" value="{{layoutVM.curUser.f_Username}}" name="username">
                            </div>
                            <div class="form-group">
                                <label for="pswd-change">Mật khẩu cũ:</label>
                                <input type="password" class="form-control" id="old-pswd-change" placeholder="*********" name="oldpswd">
                            </div>
                            <div class="form-group">
                                <label for="pswd-change">Mật khẩu mới:</label>
                                <input type="password" class="form-control" id="new-pswd-change" placeholder="*********" name="newpswd">
