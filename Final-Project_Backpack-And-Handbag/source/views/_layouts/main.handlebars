<body>
    <div class="container">
        <div class="header">
            <div class="row">
                <div class="logo col-md-4">
                   <a href="/"><img src="/imgs/logos/logo-2.png"></a>
               </div>

               <div class="col-md-4 searchBar-top">
                <form class="form-inline" method="GET" action="/product/search" id="frmSearch">
                    <input class="form-control mr-sm-2" type="text" placeholder="Tìm kiếm" size="25" id="txtSearch" name="search">
                    <button class="btn btn-danger" id="btnSearch" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
            </div>
            <div class=" col-md-4">
                {{#if layoutVM.adminLogged}}
                    <form method="POST" action="">
                        <input type="hidden" value="adminLogout" name="typeSubmit">
                        <button class="btn btn-secondary" type="submit" id="signout"><i class="fas fa-sign-out-alt fa-fw"></i> Đăng xuất</button>
                    </form>
                {{else}}
                    {{#if layoutVM.isLogged}}
                    <button class="btn btn-secondary" type="button" id="account" data-toggle="modal" data-target="#changeInfoModal" data-backdrop="static" data-keyboard="false"><i class="fas fa-user"></i> {{layoutVM.curUser.f_Username}}</button>

                    <form method="POST" action="">
                        {{!-- trường input ở dưới để xét coi mình submit cái gì, mọi submit đều phải có trường này, k là sml --}}
                        <input type="hidden" value="logout" name="typeSubmit">

                        <button class="btn btn-secondary" type="submit" id="signout"><i class="fas fa-sign-out-alt fa-fw"></i> Đăng xuất</button>
                    </form>
                    
                    {{else}}
                    <button type="button" class="btn btn-secondary" id="signin" data-toggle="modal" data-target="#signinModal" data-backdrop="static" data-keyboard="false"><i class="fa fa-sign-in-alt fa-fw"></i> Đăng nhập</button>

                    <button type="button" class="btn btn-secondary" id="signup" data-toggle="modal" data-target="#signupModal" data-backdrop="static" data-keyboard="false"><i class="fas fa-user-circle"></i> Đăng kí</button>
                    {{/if}}
                {{/if}}

                {{!-- <div class="lang_Sel">
                    Ngôn ngữ:
                    <a href="#">
                        <img src="/imgs/icons/flag-eng.png">
                    </a>
                    <a href="#">
                        <img src="/imgs/icons/flag-vie.png">
                    </a>
                </div> --}}
