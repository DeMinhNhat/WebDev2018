                            <div class="form-group">
                                <label for="re-pswd-change">Xác nhận mật khẩu mới:</label>
                                <input type="password" class="form-control" id="re-pswd-change" placeholder="*********" name="repswd">
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-7">
                                    <div class="form-group">
                                        <label for="birday-change">Ngày sinh:</label>
